{
  "name": "brocrobes",
  "version": "0.0.9",
  "description": "Browser plugin for https://transcrob.es",
  "homepage_url": "https://transcrob.es",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "img/tc16.png",
    "32": "img/tc32.png",
    "64": "img/tc64.png",
    "128": "img/tc128.png"
  },
  "web_accessible_resources": [
    "img/*.*"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Transcrobe Me!"
  },
  "manifest_version": 2
}
